#!/usr/bin/env node
"use strict";
/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('fan2c:server');
var http = require('http');
var data = require('./data');
var db = require('./db');
var api = require("./remote-api");

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.argv[2]||3551);
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);
var io = require("socket.io")(server);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}

io.on("connection", function ( socket ) {
  console.log("socket connection made");

  clientPull(["players", "adp"], function ( data ) {
    console.log(typeof data);
    socket.emit("init", data);
    console.log("init", data);
  });

  socket.on("client-pull", function ( name ) {
    console.log("client-pull");
    clientPull(name, function ( data ) {
      socket.emit("data-send", data);
      console.log("data-send");
    });
  });

  socket.on("disconnect", function () {
    console.log("...and it's over");
  });
});

io.on("data-change", function ( data ) {
  io.emit("data-send", data);
});

function clientPull ( name, callback ) {
  if ( Array.isArray(name) ) {
    name.map(function ( nameStr, i ) {
      db.pullAll(nameStr, function ( docs ) {
        if ( docs && docs.length > 1) {
          api.data[nameStr] = docs;
          console.log("top positive" + i);
          if ( i < 1 ) {
            callback(api.data);
            console.log("callback - send data to browser");
          }
        }
        else {
          data.refresh(nameStr, null, function( typeStr, data ) {
            api.data[nameStr] = data[typeStr][api.types[typeStr][1]];
            db.push(typeStr, data, function () {
              console.log("end dbPush - " + nameStr);
            });
            console.log("top negative");
          });
        }
      });
    });
  }
  else {
    db.pullAll(name, function ( docs ) {
      if ( docs && docs.length > 1) {
        api.data[name] = docs;
        console.log("bottom positive");
        callback(api.data[name]);
      }
      else {
        data.refresh(name, null, function( typeStr, data ) {
          api.data[name] = data[typeStr][api.types[typeStr][1]];
          db.push(typeStr, data, function () {
            console.log("end dbPush - " + name);
          });
          console.log("bottom negative");
          callback(api.data[name]);
        });
      }
    });
  }
}
